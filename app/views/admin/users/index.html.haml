#profiles
  %h2.text-center= t('app.listing_of', model: t('activerecord.models.patner.other'))
  %section.model-list
    .table-options.float-lg-right.mt-3.mb-4
      = link_to t('app.create_new', model: t('activerecord.models.patner.one').downcase), new_admin_user_path,
                class: 'btn btn-secondary btn-block'
    .table-responsive
      %table#profiles-table.table.table-hover
        %thead
          %th= t('activerecord.attributes.user.identification')
          %th= t('activerecord.attributes.user.name')
          %th= t('activerecord.attributes.user.gender')
          %th= t('activerecord.attributes.user.phone_number')
          %th= t('activerecord.attributes.user.email')
          %th= t('activerecord.attributes.user.status')
          %th
          %th
          %th
        %tbody
          - @users.each do |user|
            %tr
              %td= user.identification
              %td= user.full_name
              %td= t("activerecord.attributes.user.genders.#{user.gender}")
              %td= user.phone_number
              %td= user.email
              %td= t("activerecord.attributes.user.statuses.#{user.status}")
              %td
                = link_to fa_icon('dumbbell'), admin_user_user_exercises_path(user),
                          class: 'btn btn-outline-info mr-1', 'data-toggle': :tooltip, title: t('activerecord.models.routine.one')
              %td
                = link_to fa_icon('pencil-alt'), edit_admin_user_path(user),
                          class: 'btn btn-outline-success mr-1', 'data-toggle': :tooltip, title: t('app.edit')
              %td
                = link_to fa_icon('trash-alt'), admin_user_path(user), method: :delete, class: 'btn btn-outline-danger',
                          'data-toggle': :tooltip, title: t('app.destroy')