#profiles
  %h2.text-center= t('app.listing_of', model: t('activerecord.models.activity.other'))
  %section.model-list
    .table-options.float-lg-right.mt-3.mb-4
      = link_to t('app.create_new_femenine', model: t('activerecord.models.activity.one').downcase), new_admin_activity_path,
                class: 'btn btn-secondary btn-block'
    .table-responsive
      %table#profiles-table.table.table-hover
        %thead
          %th= t('activerecord.attributes.activity.name')
          %th= t('activerecord.attributes.activity.start_date')
          %th= t('activerecord.attributes.activity.user_id')
          %th= t('activerecord.attributes.activity.maximum_capacity')
          %th= t('activerecord.attributes.activity.enrolled')
          %th
          %th
        %tbody
          - @activities.each do |activity|
            %tr
              %td= activity.name
              %td= activity.start_date
              %td= activity.instructor.full_name
              %td= activity.maximum_capacity
              %td= activity.enrolled
              %td
                = link_to fa_icon('pencil-alt'), edit_admin_activity_path(activity),
                          class: 'btn btn-outline-success mr-1', 'data-toggle': :tooltip, title: t('app.edit')
              %td
                = link_to fa_icon('trash-alt'), [:admin, activity], method: :delete, class: 'btn btn-outline-danger',
                          'data-toggle': :tooltip, title: t('app.destroy')