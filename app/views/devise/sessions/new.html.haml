%article#log-in-section
  %h2.text-center.text-primary= t('session.new')
  .offset-md-4.col-sm-12.col-md-4.mb-3.mt-5
    .card.form-card
      .card-title.mt-3.text-center
        = fa_icon('user', size: '7x')
      .card-body
        = form_for(resource, as: resource_name, url: session_path(resource_name), validate: true)  do |f|
          .form-row
            .form-group.col-sm-12.col-md-12
              = f.label :email, class: ''
              = f.text_field :email, class: 'form-control'
          .form-row
            .form-group.col-sm-12.col-md-12
              = f.label :password
              = f.password_field :password, class: 'form-control'
          - if devise_mapping.rememberable?
            .form-row
              .field
                = f.check_box :remember_me
                = f.label :remember_me
          .options.d-flex.justify-content-center.mt-3
            = f.submit t('session.log_in'), class: 'btn btn-secondary'